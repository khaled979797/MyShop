@model Category

@{
    ViewBag.PageTitle = "Category Managment";
    ViewBag.CardTitle = "Delete Category";
}



<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteCategory" asp-controller="Category" >
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" disabled class="form form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" disabled class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br /><input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Category">Back To Index</a>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}